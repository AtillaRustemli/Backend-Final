@model List<Teacher>
@{
    ViewData["Title"] = "Index";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach(var teacher in Model)
            { 
            <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher mb-45">
                    <div class="single-teacher-img">
                        <a asp-controller="teacher" asp-action="detail" asp-route-id="@teacher.Id"><img src="img/teacher/@teacher.ImgUrl" alt="teacher"></a>
                    </div>
                    <div class="single-teacher-content text-center">
                            <h2><a asp-controller="teacher" asp-action="detail" asp-route-id="@teacher.Id">@teacher.Name</a></h2>
                        <h4>Associate Professor</h4>
                        <ul>

                                <li><a href="@teacher.TeacherSocialMedia.Facebook"><i class="zmdi zmdi-facebook"></i><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@teacher.TeacherSocialMedia.Pinterest"><i class="zmdi zmdi-pinterest"></i><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="@teacher.TeacherSocialMedia.Vimeo"><i class="zmdi zmdi-vimeo"></i><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="@teacher.TeacherSocialMedia.Twitter"><i class="zmdi zmdi-twitter"></i><i class="zmdi zmdi-twitter"></i></a></li>

                                
                        </ul>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
@await Html.PartialAsync("_Subscribe",new SubscribeVM())