        <label asp-for="@Model.CourseFeature.ClassDuration" class="form-label"></label>
        <input asp-for="@Model.CourseFeature.ClassDuration" class="form-control">
        <span asp-validation-for="@Model.CourseFeature.ClassDuration" style="color:red;"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CourseFeature.SkillLevel" class="form-label"></label>
        <input asp-for="@Model.CourseFeature.SkillLevel" class="form-control">
        <span asp-validation-for="@Model.CourseFeature.SkillLevel" style="color:red;"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CourseFeature.Language" class="form-label"></label>
        <input asp-for="@Model.CourseFeature.Language" class="form-control">
        <span asp-validation-for="@Model.CourseFeature.Language" style="color:red;"></span>
