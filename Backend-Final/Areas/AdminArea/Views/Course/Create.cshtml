        <input asp-for="Image" class="form-control">
        <span asp-validation-for="Image" style="color:red;"></span>
    </div>



    <h2>Course Details</h2>

    <div class="mb-3">
        <label asp-for="@Model.CourseFeature.Duration" class="form-label"></label>
