    <div class="mb-3">
        <label asp-for="@Model.CourseFeature.Students" class="form-label"></label>
        <input asp-for="@Model.CourseFeature.Students" class="form-control">
        <span asp-validation-for="@Model.CourseFeature.Students" style="color:red;"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CourseFeature.Assesment" class="form-label"></label>
        <input asp-for="@Model.CourseFeature.Assesment" class="form-control">
        <span asp-validation-for="@Model.CourseFeature.Assesment" style="color:red;"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CourseFeature.Fee" class="form-label"></label>
        <input asp-for="@Model.CourseFeature.Fee" class="form-control">
        <span asp-validation-for="@Model.CourseFeature.Fee" style="color:red;"></span>
    </div>
    <br />



    <h2>Course Details</h2>

        count++;
        <div class="mb-3">
        <label asp-for="@Model.CourseDetail.Title" class="form-label">Title</label>
            <input asp-for="@Model.CourseDetail.Title" class="form-control">
        <span asp-validation-for="@Model.CourseDetail.Title" style="color:red;"></span>
        </div>
        <div class="mb-3">
            <label  class="form-label">Desc</label>
            <input asp-for="@Model.CourseDetail.Description" class="form-control">
        <span asp-validation-for="@Model.CourseDetail.Description" style="color:red;"></span>
        </div>
       

    <h2>Categories</h2>
    <div class="btn-group" data-toggle="buttons">
        @foreach (var category in ViewBag.Categories)
        {
            <label class="btn btn-primary">
                <input type="radio" name="id" value="@category.Id"> @category.Name
            </label>

        }


    </div>
    <br />
    <button type="submit" class="btn btn-success">Submit</button>
    <a asp-controller="event" asp-action="index">Go Back</a>
</form>
